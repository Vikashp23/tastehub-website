<script>
  const WHATSAPP_NUMBER = "919632035612";

  function buildText(){
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const apartment = document.getElementById('apartment').value.trim();
    const people = document.getElementById('people').value.trim();
    const category = document.getElementById('category').value;
    const budget = document.getElementById('budget').value;
    const items = document.getElementById('items').value.trim();

    let msg = `Hi TasteHub üëã\n\nParty/Bulk Order Request (Kannuru Nearby)\n`;
    msg += `Name: ${name || "‚Äî"}\n`;
    if(phone) msg += `Phone: ${phone}\n`;
    msg += `Apartment/Location: ${apartment || "‚Äî"}\n`;
    msg += `People: ${people || "‚Äî"}\n`;
    msg += `Category: ${category}\n`;
    msg += `Budget (per person): ${budget}\n`;
    if(items) msg += `\nPreferences:\n${items}\n`;
    msg += `\nPlease suggest a menu + total price.\nThanks!`;
    return msg;
  }

  document.getElementById('sendBtn').addEventListener('click', () => {
    const apartment = document.getElementById('apartment').value.trim();
    const people = document.getElementById('people').value.trim();
    if(!apartment || !people){
      alert("Please enter Apartment/Location and People count.");
      return;
    }
    const url = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(buildText())}`;
    window.open(url, "_blank");
  });

  document.getElementById('copyBtn').addEventListener('click', async () => {
    const msg = buildText();
    try{
      await navigator.clipboard.writeText(msg);
      alert("Copied! Now paste in WhatsApp.");
    }catch(e){
      alert("Copy failed. Please copy manually:\n\n" + msg);
    }
  });
</script>
